{
	"name": "thegenielab/brightpearl",
	"type": "library",
	"description": "Brightpearl API Guzzle Wrapper",
	"homepage": "http://github.com/TheGenieLab/Brightpearl-PHP",
	"authors": [
		{
			"name": "Chase Vecchio",
			"email": "chase@thegenielab.com"
		}
	],
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
	"require": {
		"php": ">=5.4",
		"guzzlehttp/guzzle": "~4.1",
		"guzzlehttp/guzzle-services": "~0.3"
	},
	"autoload": {
		"psr-4": {
			"Brightpearl\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brightpearl\\Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev"
}
